---
interface Props {
  level?: 1 | 2 | 3 | 4 | 5;
  variant?: 'primary' | 'secondary' | 'muted';
  class?: string;
}

const { 
  level = 1, 
  variant = 'primary',
  class: className = '',
  ...rest 
} = Astro.props;

// Responsive font sizes using clamp
const sizes = {
  1: 'text-[clamp(2.2rem,6vw,3rem)]', // h1
  2: 'text-[clamp(1.8rem,5vw,2.25rem)]',  // h2
  3: 'text-[clamp(1.4rem,4vw,1.875rem)]',   // h3
  4: 'text-[clamp(1.25rem,3vw,1.5rem)]',// h4
  5: 'text-[clamp(1rem,2vw,1.25rem)]'   // h5
};

const variantClasses = {
  primary: 'text-gray-900',
  secondary: 'text-gray-700',
  muted: 'text-gray-500'
};

const baseClasses = 'font-primary font-light leading-tight';

const headingClasses = [
  baseClasses,
  sizes[level],
  variantClasses[variant],
  className
].join(' ');

const Tag = `h${level}` as any;
---

<Tag 
  class={headingClasses}
  {...rest}
>
  <slot />
</Tag>
