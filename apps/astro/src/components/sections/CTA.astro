---
import Heading from '@components/common/Heading.astro';
import P from '@components/common/P.astro';
import Button from '@components/common/Button.astro';
import { Image } from 'astro:assets';
import hvacIllustration from '@assets/images/hvac-system.svg';
---

<section class="py-8 md:py-12">
    <div
      class="bg-gradient-to-b from-secondary to-[#B3D3EA] rounded-3xl flex flex-col md:flex-row items-center justify-between gap-8 md:gap-12 mb-16 h-auto md:h-[500px] px-4 md:px-8 lg:px-12 overflow-hidden"
    >
      <div class="flex-1 z-10 flex flex-col justify-center items-start h-full py-8 md:py-16">
        <div class="flex-1">
            <Heading level={2} class="mb-4 text-white">
              Fresh Air &amp; Cold<br class="hidden md:block" />
              Precision, On Your Terms
            </Heading>
            <P level={2} variant="secondary" class="mb-8 text-white/90 max-w-xs md:max-w-sm">
              Connect with BlueBay Mechanical for exclusive service savings and priority booking.
            </P>
        </div>
        <div class="flex flex-col md:flex-row gap-4 w-full md:w-auto">
          <Button variant="primary" class="min-w-[180px]">
            Schedule Service
          </Button>
          <Button variant="outline">
            More Info
          </Button>
        </div>
      </div>
      <div class="flex-1 flex justify-center items-center relative w-full h-64 md:h-full">
        <Image
          src={hvacIllustration}
          alt="HVAC System Illustration"
          class="w-4/5 max-w-xs md:max-w-lg h-auto absolute md:static scale-125 md:scale-150 bottom-2 md:bottom-auto right-2 md:right-20"
          loading="lazy"
        />
      </div>
    </div>
</section>
